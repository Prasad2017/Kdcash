                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:gravity="center"
                    whatever:hintTextColor="@color/light_black"
                    app:boxStrokeColor="@color/light_black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/light_black">

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/receiverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/light_black"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Account Holder Name * "
                        android:layout_marginTop="30dp"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText"
                        whatever:emptyErrorString="Please Fill This"
                        whatever:testType="personName"
                        whatever:testErrorString="Enter valid name" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:gravity="center"
                    whatever:hintTextColor="@color/light_black"
                    app:boxStrokeColor="@color/light_black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/light_black">

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/receiverNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/light_black"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Receiver Number * "
                        android:layout_marginTop="30dp"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:digits="0123456789"
                        android:padding="10dp"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText"
                        whatever:emptyErrorString="Please Fill This"
                        whatever:testErrorString="Enter valid mobile number" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:gravity="center"
                    whatever:hintTextColor="@color/light_black"
                    app:boxStrokeColor="@color/light_black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/light_black">

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/receiverAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/light_black"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Receiver Address * "
                        android:layout_marginTop="30dp"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText"
                        whatever:emptyErrorString="Please Fill This"
                        whatever:testErrorString="Enter valid address" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:gravity="center"
                    whatever:hintTextColor="@color/light_black"
                    app:boxStrokeColor="@color/light_black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/light_black">

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/accountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/light_black"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Account Number* "
                        android:layout_marginTop="30dp"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText"
                        whatever:emptyErrorString="Please Fill This"
                        whatever:testErrorString="Enter valid address" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:gravity="center"
                    whatever:hintTextColor="@color/light_black"
                    app:boxStrokeColor="@color/light_black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/light_black">

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/bankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/light_black"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Bank Name * "
                        android:layout_marginTop="30dp"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText"
                        whatever:emptyErrorString="Please Fill This"
                        whatever:testErrorString="Enter valid address" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/imageName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/reversegendermaleborder"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="Select Image"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/imageSelect"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/reversegenderfemaleborder"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"
                        android:text="Choose"
